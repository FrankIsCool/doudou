<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 声明需要暴露的服务接口（注意是接口,不是实现类） -->

    <dubbo:service interface="com.service.balance.BalanceService" ref="balanceService" timeout="30000"/>
    <bean id="balanceService" class="com.impl.balance.BalanceServiceImpl"/>

    <dubbo:service interface="com.service.balance.BalanceBillLogService" ref="balanceBillLogService" timeout="30000"/>
    <bean id="balanceBillLogService" class="com.impl.balance.BalanceBillLogServiceImpl"/>
</beans>